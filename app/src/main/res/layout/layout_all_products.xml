<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tiny_margin"
    app:cardCornerRadius="@dimen/small_radius"
    app:cardElevation="@dimen/small_radius"
    app:contentPadding="@dimen/tiny_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivItemImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_size_container"
            android:layout_marginStart="@dimen/tiny_margin"
            android:layout_marginTop="@dimen/tiny_margin"
            android:layout_marginEnd="@dimen/tiny_margin"
            android:layout_marginBottom="@dimen/tiny_margin"
            android:contentDescription="@string/content_description"
            android:minHeight="@dimen/small_size_container"
            android:scaleType="fitXY"
            app:riv_border_color="#333333"
            app:riv_border_width="@dimen/tiny_radius"
            app:riv_corner_radius="@dimen/small_radius"
            app:riv_mutate_background="false"
            app:riv_oval="false"
            app:riv_tile_mode="clamp"
            tools:src="@tools:sample/backgrounds/scenic" />

        <LinearLayout
            android:id="@+id/llItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivItemImage"
            android:orientation="vertical"
            android:padding="@dimen/tiny_padding">

            <com.example.lori.widgets.BoldMontserratTextView
                android:id="@+id/tvItemTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/tiny_size_text"
                tools:text="Item Name" />

            <com.example.lori.widgets.BoldMontserratTextView
                android:id="@+id/tvItemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/micro_margin"
                android:textColor="@color/item_value_text_color"
                android:textSize="@dimen/tiny_size_text"
                tools:text="10.000 VND" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
