<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tiny_margin"
    android:background="@drawable/ic_item_dashboard_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/nano_padding">

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/small_size_container"
        android:layout_margin="@dimen/tiny_margin"
        android:background="@color/colorImageViewBackground"
        android:contentDescription="@string/content_description"
        android:minHeight="@dimen/small_size_container"
        android:scaleType="fitXY"
        android:src="@drawable/im_bg" />

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_below="@id/ivItemImage"
        android:background="@color/colorBorder" />

    <LinearLayout
        android:id="@+id/llItemDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vDivider"
        android:background="@color/dashboard_item_details_bg"
        android:orientation="vertical"
        android:padding="@dimen/tiny_padding">

        <com.example.lori.widgets.BoldMontserratTextView
            android:id="@+id/tvItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/item_value_text_color"
            android:textSize="@dimen/tiny_size_text"
            android:textStyle="bold"
            tools:text="Item Name" />

        <com.example.lori.widgets.RegularMontserratTextView
            android:id="@+id/tvItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/micro_margin"
            android:textColor="@color/item_value_text_color"
            android:textSize="@dimen/tiny_size_text"
            android:textStyle="bold"
            tools:text="$100.00" />
    </LinearLayout>
</RelativeLayout>
