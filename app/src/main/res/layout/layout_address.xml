<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/radius_medium"
    app:cardElevation="@dimen/radius_medium"
    app:contentPadding="@dimen/padding_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/margin_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.example.lori.widgets.BoldMontserratTextView
                android:id="@+id/tvAddressFullname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_big"
                tools:text="Trung Van" />

            <com.example.lori.widgets.BoldMontserratTextView
                android:id="@+id/tvAddressType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_button_background"
                android:padding="@dimen/padding_medium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small"
                tools:text="Home" />
        </LinearLayout>

        <com.example.lori.widgets.RegularMontserratTextView
            android:id="@+id/tvAddressDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_small"
            tools:text="Ha Noi, Viet Nam" />

        <com.example.lori.widgets.RegularMontserratTextView
            android:id="@+id/tvAddressMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_small"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_small"
            tools:text="0987654321" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
